<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>LoadIndexPage</servlet-name>
        <servlet-class>src.servlets.LoadIndexPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadGalleryPage</servlet-name>
        <servlet-class>src.servlets.LoadGalleryPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PropertiesIndexSearch</servlet-name>
        <servlet-class>src.servlets.PropertiesIndexSearch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RefinedSearch</servlet-name>
        <servlet-class>src.servlets.RefinedSearch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadSinglePage</servlet-name>
        <servlet-class>src.servlets.LoadSinglePage</servlet-class>
        <init-param>
            <param-name>propertyId</param-name>
            <param-value>Value</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>SetFavourites</servlet-name>
        <servlet-class>src.servlets.SetFavourites</servlet-class>
        <init-param>
            <param-name>propertyID</param-name>
            <param-value>Value</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>LoadFavouritesPage</servlet-name>
        <servlet-class>src.servlets.LoadFavouritesPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteFavourite</servlet-name>
        <servlet-class>src.servlets.DeleteFavourite</servlet-class>
        <init-param>
            <param-name>propertyID</param-name>
            <param-value>Value</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadIndexPage</servlet-name>
        <url-pattern>/LoadIndexPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadGalleryPage</servlet-name>
        <url-pattern>/LoadGalleryPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PropertiesIndexSearch</servlet-name>
        <url-pattern>/PropertiesIndexSearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RefinedSearch</servlet-name>
        <url-pattern>/RefinedSearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadSinglePage</servlet-name>
        <url-pattern>/LoadSinglePage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SetFavourites</servlet-name>
        <url-pattern>/SetFavourites</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadFavouritesPage</servlet-name>
        <url-pattern>/LoadFavouritesPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteFavourite</servlet-name>
        <url-pattern>/DeleteFavourite</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
